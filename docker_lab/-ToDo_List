### DOCKER COMPOSE ###
# Install Docker_Compose
./install-compose.hs


# Clean Ambient
docker system prune
docker volume prune
docker rm -f <build>
docker network rm <network>

# Start / Stop Enviroment
docker-compose up
docker-compose down

# Test appication
curl http://localhost:8080/


### DOCKER SWARM ###
# Build Environment
vagrant up # (slow process)

# Create the cluster
docker swarm init --advertise-addr <IP> [10.10.0.2] (on manager)
docker swarm join --token <TOKEN> <IP:Port> [10.10.0.2:2377] (on hosts)

# List machines on cluster
docker node ls 

# Initiate service on cluster
docker service create --name <name> [devops] --publish 80:80 nginx

# List service
docker service ls
docker service ps <name> [devops] (more detailed view)

# Escalonate service
docker service scale <name>=<number> [devops=3]

# Test application
acces localhost:8090 (on browser)